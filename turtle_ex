def squareInSquare(t,x,num):
    for i in range(num):
        drawSquare(t,(x*i))
        t.penup()
        t.left(45)
        t.forward(x*i)
        t.left(45)
        t.pendown()


        

def drawManySquare(t, x, num):
    for i in range(num):
        drawSquare(t, x)
        t.penup()
        t.forward(2*x)
        t.pendown()

def drawSquare(t, x):
    for i in range(4):
        t.forward(x)
        t.left(90)


